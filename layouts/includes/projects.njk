<div class="projects">
    <h1 class="text-center projects__projects-heading">{{ projects_heading | upper}}</h1>
    <div class="grid projects__grid">
        {% for project in projects %}
        <div
            onClick="return handleProjectCardClick(event, '{{ project.name }}')"
            class="cell collapse collapse-padding medium-six text-center projects__card"
            style="background-image:url('./assets/img/{{ project.img }}.png');"
        >
            <div class="projects__details">
                <h2 class="six margin-auto projects__name">{{ project.display_name | upper }}</h2>
                <h2 class="projects__description">{{ project.description }}</h2>
                <h4 class="projects__stack">{{ project.stack | upper }}</h4>
            </div>
        </div>
        {% endfor %}
        <div id="projectModal" class="projects__modal">
            <div class="grid justify-end projects__modal-nav-container">
                <button type="button" onclick="return handleCloseModalClick(event)" class="close-btn projects__close-btn">&times;</button>
            </div>
            <img id="projectImg" src='' alt='' class="projects__full-img">
        </div>
    </div>
</div>